@{
    Layout = "_MetroLayout.cshtml";
}
@section breadcrumb{
    @Html.ActionLink("Index", "Index", "客戶銀行資訊") @*用render section 產生內容給Layout*@
}

@using X.PagedList.Mvc;
@using X.PagedList;

@model IEnumerable<MVC5Course.Models.客戶銀行資訊>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Search", "客戶銀行資訊", FormMethod.Get, null))
    {
        @*<input type="Search" name="keyWord" placeholder="請輸入關鍵字" />*@
        @Html.TextBox("KeyWord", null, "請選擇", new { placeholder = "請輸入關鍵字 銀行名稱" })//顯示之前輸入的關鍵字
        <input type="submit" />
    }
</p>
<p>
    @Html.ActionLink("匯出客戶銀行資訊Excel", "ExportExcel")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.銀行名稱)
            @Html.ActionLink("Desc", "FieldSort", new { Field = "銀行名稱", type = "Desc", page = ViewBag.CurrPage })
            @Html.ActionLink("Asc", "FieldSort", new { Field = "銀行名稱", type = "Asc", page = ViewBag.CurrPage })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行代碼)
            @Html.ActionLink("Desc", "FieldSort", new { Field = "銀行代碼", type = "Desc", page = ViewBag.CurrPage })
            @Html.ActionLink("Asc", "FieldSort", new { Field = "銀行代碼", type = "Asc", page = ViewBag.CurrPage })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.分行代碼)
            @Html.ActionLink("Desc", "FieldSort", new { Field = "分行代碼", type = "Desc", page = ViewBag.CurrPage })
            @Html.ActionLink("Asc", "FieldSort", new { Field = "分行代碼", type = "Asc", page = ViewBag.CurrPage })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶名稱)
            @Html.ActionLink("Desc", "FieldSort", new { Field = "帳戶名稱", type = "Desc", page = ViewBag.CurrPage })
            @Html.ActionLink("Asc", "FieldSort", new { Field = "帳戶名稱", type = "Asc", page = ViewBag.CurrPage })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶號碼)
            @Html.ActionLink("Desc", "FieldSort", new { Field = "帳戶號碼", type = "Desc", page = ViewBag.CurrPage })
            @Html.ActionLink("Asc", "FieldSort", new { Field = "帳戶號碼", type = "Asc", page = ViewBag.CurrPage })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.銀行名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.銀行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.分行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶號碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page, ViewBag.CurrPage }))
